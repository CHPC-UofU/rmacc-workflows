rule link:
	input: "hello_world.o"
	output: "hello_world"
	shell: """
		hostname
		cc -o {output} {input}
		"""

rule compile:
	input: source="hello_world.c", headers=["hello_world.h",]
	output: "hello_world.o"
	shell:	"""
		hostname
		cc -c {input.source}
		"""

rule clean:
	shell: "rm -f hello_world hello_world.o"
